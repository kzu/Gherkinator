  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Features" Version="2.9.0" />
    <PackageReference Include="Gherkin" Version="5.1.0" />
  </ItemGroup>

</Project>
