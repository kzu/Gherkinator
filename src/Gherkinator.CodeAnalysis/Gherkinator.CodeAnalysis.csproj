  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Gherkinator.targets" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Gherkinator.targets">
      <PackagePath>build\</PackagePath>
      <Pack>true</Pack>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
